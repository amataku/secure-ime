{
  extends: ["eslint:recommended"],
  plugins: [],
  env: {
    browser: true,
    node: true,
    es6: true
  },
  parserOptions: {
    ecmaVersion: 6,
    sourceType: "module" // ES2015のモジュールを許可
  },
  rules: {
    semi: [2, "never"], // エラー: セミコロン
    no-console: 0, // 許可: console
    indent: [2, 2] // エラー: インデントがスペース2以外
  }
}
